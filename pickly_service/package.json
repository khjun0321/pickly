{
  "name": "pickly-service",
  "version": "1.0.0",
  "description": "Pickly - 정부 정책/혜택 개인 맞춤형 큐레이션 서비스",
  "private": true,
  "workspaces": [
    "apps/*",
    "backend/*",
    "packages/*"
  ],
  "scripts": {
    "build": "npm run build:tokens && npm run build:foundations && npm run build:assets && npm run build:packages",
    "build:tokens": "cd packages/design-tokens && npm run build",
    "build:foundations": "cd packages/design-foundations && npm run build",
    "build:assets": "cd packages/assets && npm run build",
    "build:packages": "npm run build:ui-web && npm run build:ui-shared",
    "build:ui-web": "cd packages/ui-web && npm run build",
    "build:ui-shared": "cd packages/ui-shared && npm run build",
    "test": "melos exec --scope=\"pickly-*\" -- npm run test",
    "lint": "melos exec --scope=\"pickly-*\" -- npm run lint",
    "typecheck": "melos exec --scope=\"pickly-*\" -- npm run typecheck",
    "dev": "melos exec --parallel --scope=\"pickly-*\" -- npm run dev",
    "dev:web": "cd apps/web && npm run dev",
    "dev:admin": "cd apps/admin && npm run dev",
    "dev:api": "cd backend/api && npm run dev",
    "dev:storybook": "cd packages/storybook && npm run dev",
    "build:storybook": "cd packages/storybook && npm run build",
    "clean": "melos clean && npm run clean:dist",
    "clean:dist": "find packages -name dist -type d -exec rm -rf {} + 2>/dev/null || true",
    "bootstrap": "npm install && melos bootstrap",
    "version": "melos version",
    "publish": "melos publish",
    "optimize:images": "cd packages/assets && npm run optimize:images",
    "generate:icons": "cd packages/assets && npm run generate:icons",
    "sparc:modes": "npx claude-flow sparc modes",
    "sparc:tdd": "npx claude-flow sparc tdd",
    "sparc:pipeline": "npx claude-flow sparc pipeline"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "typescript": "^5.0.0",
    "eslint": "^8.0.0",
    "prettier": "^3.0.0",
    "jest": "^29.0.0",
    "melos": "^6.0.0",
    "rollup": "^3.26.0",
    "@rollup/plugin-typescript": "^11.1.0",
    "@rollup/plugin-node-resolve": "^15.1.0",
    "@rollup/plugin-commonjs": "^25.0.0",
    "rollup-plugin-peer-deps-external": "^2.2.4",
    "rollup-plugin-terser": "^7.0.2",
    "sharp": "^0.32.0",
    "jsdom": "^22.1.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/kwonhyunjun/pickly-service.git"
  },
  "keywords": [
    "government",
    "policy",
    "benefits",
    "curation",
    "personalization",
    "flutter",
    "react",
    "supabase",
    "monorepo"
  ],
  "author": "Kwon Hyun Jun",
  "license": "MIT"
}