{
  "name": "pickly-service",
  "version": "1.0.0",
  "description": "Pickly - Social Recommendation & Content Curation Platform",
  "private": true,
  "workspaces": [
    "apps/*",
    "backend/*",
    "packages/*"
  ],
  "scripts": {
    "build": "melos exec --scope=\"pickly-*\" -- npm run build",
    "test": "melos exec --scope=\"pickly-*\" -- npm run test",
    "lint": "melos exec --scope=\"pickly-*\" -- npm run lint",
    "typecheck": "melos exec --scope=\"pickly-*\" -- npm run typecheck",
    "dev": "melos exec --parallel --scope=\"pickly-*\" -- npm run dev",
    "clean": "melos clean",
    "bootstrap": "melos bootstrap",
    "version": "melos version",
    "publish": "melos publish",
    "sparc:modes": "npx claude-flow sparc modes",
    "sparc:tdd": "npx claude-flow sparc tdd",
    "sparc:pipeline": "npx claude-flow sparc pipeline"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "typescript": "^5.0.0",
    "eslint": "^8.0.0",
    "prettier": "^3.0.0",
    "jest": "^29.0.0",
    "melos": "^6.0.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/kwonhyunjun/pickly-service.git"
  },
  "keywords": [
    "social",
    "recommendation",
    "curation",
    "flutter",
    "react",
    "node.js",
    "monorepo"
  ],
  "author": "Kwon Hyun Jun",
  "license": "MIT"
}